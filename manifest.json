{
  "manifest_version": 3,
  "name": "AI Prompt Library",
  "version": "1.0.0",
  "description": "Save and organize text selections as AI prompts for later use",
  "permissions": ["contextMenus", "storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon64.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}